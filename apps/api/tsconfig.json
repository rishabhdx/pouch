{
  "extends": ["@tsconfig/node-ts/tsconfig.json"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "preserve",
    // "baseUrl": "./src",
    // "paths": {
    //   "@/*": ["*"]
    // },
    "moduleResolution": "bundler",
    "outDir": "dist",
    // "importsNotUsedAsValues": "remove",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

